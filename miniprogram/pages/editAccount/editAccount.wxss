input.accuntName {
    box-sizing: border-box;
    /* 设计师的项目稿是750
        有了rpx 可以让我们直接从设计稿里取大小
    */
    height: 100rpx;
    width: 90%;
    border: 1px solid #8f8d8d;
    border-radius: 10rpx;
    margin: 4% 0 4%;
    /* padding-left: 25rpx; */
    padding: 0 25rpx;
  }
  .panel {
    height: 700rpx;
  }
  
  .imageBox {
    text-align: center;
  }
  
  .image, .addBox {
    width: 200rpx;
    height: 260rpx;
    margin: 20rpx 10rpx;
    border-radius: 20rpx;
  }
  
  .addBox {
    display: inline-block;
    box-sizing: border-box;
    border: 2px dashed #b6b3b3;
    padding-top: 100rpx;
    color: #8f8d8d;
  }
  
  .container > button {
    width: 80%;
    border-radius: 50rpx;
    margin-top: 5%;
  }
  
  .container > .addBtn {
    margin-top: 13%;
  }
  
  .van-col {
    position: relative;
  }
  
  .select {
    position: absolute;
    right: 30rpx;
    bottom: 36rpx;
    width: 40rpx;
    height: 40rpx;
  }